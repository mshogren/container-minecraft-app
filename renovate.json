{
  "extends": [
    "config:base",
    "helpers:pinGitHubActionDigests"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6am"]
  },
  "packageRules": [
    {
      "matchManagers": ["pipenv"],
      "matchUpdateTypes": ["minor", "patch"],
      "schedule": ["before 6am"],
      "automerge": true
    },
    {
      "matchManagers": ["npm"],
      "matchDepTypes": ["dependencies", "devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "schedule": ["before 6am"],
      "automerge": true
    }
  ],
  "platformAutomerge": true
}
