{
  "name": "container-minecraft-app",
  "version": "0.0.0",
  "description": "An app to control containerized instances of Minecraft servers",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "autopep8": "api/.venv/bin/autopep8 --experimental --in-place",
    "pylint": "api/.venv/bin/pylint --rcfile=api/.pylintrc",
    "lint-graphql-schema": "cd api; .venv/bin/strawberry export-schema main | npx graphql-schema-linter -s -e relay-page-info-spec,enum-values-have-descriptions"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mshogren/container-minecraft-app.git"
  },
  "author": "mshogren",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mshogren/container-minecraft-app/issues"
  },
  "homepage": "https://github.com/mshogren/container-minecraft-app#readme",
  "devDependencies": {
    "@commitlint/cli": "16.3.0",
    "@commitlint/config-conventional": "16.2.4",
    "eslint": "8.15.0",
    "graphql-schema-linter": "3.0.0",
    "husky": "8.0.1",
    "jsdom": "19.0.0",
    "lint-staged": "12.4.1",
    "madr": "2.1.2",
    "prettier": "2.6.2",
    "tsc-files": "1.1.3",
    "vite": "2.9.9",
    "vitest": "0.12.6"
  },
  "workspaces": [
    "api",
    "app",
    "docs"
  ],
  "lint-staged": {
    "**/*.py": [
      "npm run autopep8",
      "npm run pylint",
      "npm run lint-graphql-schema"
    ],
    "app/*": [
      "prettier --ignore-unknown --write"
    ],
    "app/**/*.{js,jsx,ts,tsx}": [
      "eslint"
    ],
    "**/*.{ts,tsx}": [
      "tsc-files -p app/tsconfig.json --noEmit"
    ]
  }
}
