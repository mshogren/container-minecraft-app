{
  "name": "container-minecraft-app",
  "version": "1.0.0",
  "description": "An app to control containerized instances of Minecraft servers",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "autopep8": "api/.venv/bin/autopep8 --experimental --in-place", 
    "pylint": "api/.venv/bin/pylint --rcfile=api/.pylintrc",
    "lint-graphql-schema": "cd api; .venv/bin/strawberry export-schema main | npx graphql-schema-linter -s -e relay-page-info-spec",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mshogren/container-minecraft-app.git"
  },
  "author": "mshogren",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mshogren/container-minecraft-app/issues"
  },
  "homepage": "https://github.com/mshogren/container-minecraft-app#readme",
  "devDependencies": {
    "@commitlint/cli": "16.0.1",
    "@commitlint/config-conventional": "16.0.0",
    "graphql-schema-linter": "2.0.1",
    "husky": "7.0.4",
    "lint-staged": "12.1.5",
    "madr": "2.1.2"
  },
  "workspaces": [
    "api",
    "docs"
  ],
  "lint-staged": {
    "**/*.py": [
      "npm run autopep8",
      "npm run pylint",
      "npm run lint-graphql-schema"
    ]
  }
}
